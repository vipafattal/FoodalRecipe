<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnBackground">#D9FFFFFF</item>
        <item name="colorOnSecondary">#F3F0F0</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorSecondaryBackground">#FAFFFFFF</item>
    </style>
   
    <style name="AppTheme.Dark">
        <item name="colorOnSecondary">#101112</item>
        <item name="colorOnPrimary">#1C1C1C</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#ABA5A5</item>
        <item name="colorOnBackground">#E6121314</item>
        <item name="colorSecondaryBackground">#FC121314</item>
        <item name="android:windowBackground">@color/color_background_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#E6121314</item>

    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Details" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Details.DetailsBold" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Details.small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Details.normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Details.Large">
        <item name="android:textSize">21.5sp</item>
    </style>


    <style name="Secondary" parent="Theme.MaterialComponents.Light"/>

    <style name="Widget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">28sp</item>
    </style>


    <style name="MyEditText">
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

</resources>
